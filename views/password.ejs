<!DOCTYPE html>
<html>
    <% include partials/part_head %>
    <body>
        <div class="container">
            <div class="row">
                <% include partials/part_navbar %>
            </div>
            <% if(changed) { %>
                <% if(error) { %>
                    <div class="row">
                        <p class="fail">Password NOT changed! Check your Server settings</p>
                    </div>
                <% } else {%>
                    <div class="row">
                        <p class="success">Password changed!</p>
                    </div>
                <% } %>
            <% } %>
            <div class="row">
                <form action="/execute" method="POST">
                    <div class="form-group col-sm-6">
                        <label class="control-label" for="password">New Password:</label>
                        <input class="input-lg" type="text" name="password" id="password" />
                    </div>
                    <div class="form-group col-sm-6">
                        <button class="btn-success btn-lg" type="submit">Change</button>
                    </div>
                    <input type="hidden" name="action" value="password" />
                </form>
            </div>
            <div class="row">
                <% include partials/part_footer %>
            </div>
        </div>
    </body>
</html>
