<!DOCTYPE html>
<html>
    <% include partials/head %>
    <body>
        <div class="container">
            <div class="row">
                <% include partials/navbar %>
            </div>
            <% if(changed) { %>
                <div class="row">
                    <p class="title">Password changed!</p>
                </div>
            <% } %>
            <div class="row">
                <form action="/execute" method="POST">
                    <div class="form-group col-sm-6">
                        <label class="control-label" for="rcon">New Password:</label>
                        <input class="input-lg" type="text" name="password" id="password" />
                    </div>
                    <div class="form-group col-sm-6">
                        <button class="btn-success btn-lg" type="submit">Change</button>
                    </div>
                    <input type="hidden" name="action" value="password" />
                </form>
            </div>
        </div>
    </body>
</html>
