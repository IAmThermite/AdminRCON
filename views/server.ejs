<!DOCTYPE html>
<html>
    <% include partials/part_head %>
    <body>
        <div class="container">
            <div class="row">
                <% include partials/part_navbar %>
            </div>
            <div class="row">
                <form action="/server" method="POST">
                    <div class="form-group col-sm-6">
                        <label class="control-label" for="address">Address:</label>
                        <% if(server !== undefined) { %>
                            <input class="input-lg" value="<%= server.address %>" type="text" name="address" id="address" />
                        <% } else { %>
                            <input class="input-lg" value="" type="text" name="address" id="address" />
                        <% } %>
                    </div>
                    <div class="form-group col-sm-6">
                        <label class="control-label" for="password">RCON:</label>
                        <% if(server !== undefined) { %>
                            <input class="input-lg" value="<%= server.rcon %>" type="text" name="password" id="password" />
                        <% } else { %>
                            <input class="input-lg" value="" type="text" name="password" id="password" />
                        <% } %>
                    </div>
                    <div class="form-group col-sm-12">
                        <button class="btn-success btn-lg" type="submit">Update Settings</button>
                    </div>
                </form>
            </div>
            <% if(server !== undefined) { %>
                <div class="row">
                    <div class="col-sm-12">
                        <form action="/clear" method="GET">
                            <div class="form-group col-sm-12">
                                <button class="btn-success btn-lg" type="submit">Clear Server</button>
                            </div>
                        </form>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-12">
                        <% if(password !== undefined) { %>
                            <p>Server Password: <%= password %></p>
                        <% } else { %>
                            <p>Could not get server password. Server may have no password.</p>
                        <% } %>
                    </div>
                </div>
            <% } %>
            <div class="row">
                <% include partials/part_footer %>
            </div>
        </div>
    </body>
</html>
