<!DOCTYPE html>
<html>
    <% include partials/part_head %>
    <body>
        <div class="container">
            <div class="row">
                <% include partials/part_navbar %>
            </div>
            <% if(changed) { %>
                <div class="row">
                    <p class="success">Map changed!</p>
                </div>
            <% } %>
            <div class="row">
                <% for(var i=0; i<mapList.length; i++) { %>
                    <form action="/execute" method="POST">
                        <div class="col-sm-3">
                            <label class="control-label" for="mapname"><%= mapList[i].realname %></label>
                            <input type="image" style="width: 100%; border: 2px solid #000000" src="/images/<%= mapList[i].mapfile %>.jpg" onerror="this.src='/images/mapname.jpg'" alt="<%= mapList[i].mapfile %>" />
                            <input type="hidden" name="mapname" value="<%= mapList[i].mapfile %>" id="mapname" />
                        </div>
                        <input type="hidden" name="action" value="map" />
                    </form>
                <% } %>
            </div>
            <div class="row">
                <% include partials/part_footer %>
            </div>
        </div>
    </body>
</html>
