<!DOCTYPE html>
<html>
    <% include partials/part_head %>
    <body>
        <div class="container">
            <div class="row">
                <% include partials/part_navbar %>
            </div>
            <div class="row">
                <form action="/server" method="POST">
                    <div class="form-group col-sm-6">
                        <label class="control-label" for="address">Server Address:</label>
                        <% if(server !== undefined) { %>
                            <input class="input-lg" value="<%= server.address %>" type="text" name="address" id="address" />
                        <% } else { %>
                            <input class="input-lg" value="" type="text" name="address" id="address" />
                        <% } %>
                    </div>
                    <div class="form-group col-sm-6">
                        <label class="control-label" for="password">RCON Password:</label>
                        <% if(server !== undefined) { %>
                            <input class="input-lg" value="<%= server.rcon %>" type="text" name="password" id="password" />
                        <% } else { %>
                            <input class="input-lg" value="" type="text" name="password" id="password" />
                        <% } %>
                    </div>
                    <p class="title">OR</p>
                    <div class="form-group col-sm-12">
                        <label class="control-label" for="string">Connect String:</label>
                        <input class="input-lg" type="text" name="string" id="string" />
                    </div>
                    <div class="form-group">
                        <% if(server !== undefined) { %>
                            <button type="submit" class="btn-success btn-lg">Update</button>
                        <% } else { %>
                            <button type="submit" class="btn-success btn-lg">Submit</button>
                        <% } %>
                    </div>
                </form>
            </div>
            <div class="row">
                <% include text/text_home %>
            </div>
            <div class="row">
                <% include partials/part_footer %>
            </div>
        </div>
    </body>
</html>
