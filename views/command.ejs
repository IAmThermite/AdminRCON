<!DOCTYPE html>
<html>
    <% include partials/part_head %>
    <body>
        <div class="container">
            <div class="row">
                <% include partials/part_navbar %>
            </div>
            <% if(changed) { %>
                <div class="row">
                    <p class="success">Command executed!</p>
                </div>
            <% } %>
            <div class="row">
                <form action="/execute" method="POST">
                    <div class="form-group col-sm-6">
                        <label class="control-label" for="command">Execute Command</label>
                        <input class="input-lg" type="text" name="command" id="command" />
                    </div>
                    <div class="form-group col-sm-6">
                        <button class="btn-success btn-lg" type="submit">Execute</button>
                    </div>
                    <input type="hidden" name="action" value="command" />
                </form>
            </div>
            <div class="row">
                <% for(var i=0; i<commandList.length; i++) { %>
                    <form action="/execute" method="POST">
                        <div class="col-sm-3">
                            <label class="control-label" for="command"><%= commandList[i].name %></label>
                            <button class="btn-success btn-lg" type="submit">Execute</button>
                            <input type="hidden" name="command" value="<%= commandList[i].command %>" id="command" />
                        </div>
                        <input type="hidden" name="action" value="command" />
                    </form>
                <% } %>
            </div>
            <div class="row">
                <% include partials/part_footer %>
            </div>
        </div>
    </body>
</html>
